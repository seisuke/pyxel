{
  "tasks": {
    "build": "zsh ./build.sh",
    "local": "deno run --allow-read --allow-net --allow-env --allow-write --allow-run ts/src/server.ts",
    "local_all": "deno task build && deno task local"
  },
  "imports": {
    "esbuild": "https://deno.land/x/esbuild@v0.19.11/mod.js",
    "esbuild_deno_loader": "https://deno.land/x/esbuild_deno_loader@0.8.0/mod.ts"
  },
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "strict": true
  }
}
